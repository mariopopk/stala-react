{
  "name": "project-stala",
  "version": "1.0.0",
  "description": "Full Stack Ecommerce Application",
  "main": "index.js",
  "scripts": {
    "strapi-develop": "cd ./stala/ && npm run strapi develop",
    "strapi-start": "cd ./stala/ && npm run strapi start",
    "strapi-build": "cd ./stala/ && npm run strapi build",
    "strapi": "cd ./stala/ && npm run strapi",   
    "react-build": "cd ./stala-react/ && npm run react-scripts build",
    "react-start": "cd ./stala-react/ && npm run react-scripts start",    
    "dev": "concurrently \"npm run strapi-develop\" \"npm run react-start\"",
    "build": "concurrently \"npm run strapi-build\" \"npm run react-build\"",
    "start": "concurrently \"npm run strapi-start\" \"npm run react-start\"",
    "heroku-postbuild": "NPM_CONFIG_PRODUCTION=false  npm run react-build" 
  },
  "author": "Mario Popoca",
  "license": "ISC",
  "dependencies": {
    "concurrently": "^6.2.0"
  }
}


